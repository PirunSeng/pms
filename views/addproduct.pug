extends layout

block content
  h1=title
  ul.errors
    if errors
      each error, i in errors
        li.alert.alert-danger #{error.msg}

  form(method='post', action='/products/add', encrypted="multipart/form-data")
    .form-group
      label Product Name:
      input.form-control(name='product_name', type='text')
    .form-group
      label Price:
      input.form-control(name='price', type='text')
    .form-group
      label Description:
      input.form-control(name='description', type='text')
    input.btn.btn-default(name='submit', type='submit', value='Save')
